<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ihongqiqu.androidschemedemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SchemeActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" /> <!-- 必须有 -->
                <category android:name="android.intent.category.BROWSABLE" /> <!-- 必须有 -->
                <category android:name="android.intent.category.DEFAULT" /> <!-- 必须有 -->
                <data android:scheme="schemedemo"
                      android:host="ihongqiqu.com"
                      android:pathPrefix="/test"
                    />
            </intent-filter>
        </activity>
    </application>

</manifest>
